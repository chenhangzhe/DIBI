<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gyF9"
    android:orientation="vertical"
    tools:context="cn.suozhi.DiBi.c2c.view.ComplaintActivity">

    <include layout="@layout/toolbar_center" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--标题-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x_15dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="@dimen/x_15dp"
                android:background="@mipmap/qrcode_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/text_color_dark"
                    android:textSize="17sp"
                    android:text="@string/str_complaint_info" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x_15dp"
                android:layout_marginRight="@dimen/x_15dp"
                android:background="@drawable/charge_coin_radius_8dp_bg"
                android:orientation="vertical"
                android:paddingBottom="33dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/x_15dp"
                    android:layout_marginTop="@dimen/x_15dp"
                    android:layout_marginRight="@dimen/x_15dp"
                    android:background="@drawable/login_edit_bg"
                    android:paddingLeft="@dimen/x_15dp"
                    android:paddingRight="@dimen/x_15dp">

                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:singleLine="true"
                        android:hint="@string/str_edit_less_than_50"
                        android:textColor="@color/text_color_dark"
                        android:textColorHint="@color/gy8A"
                        android:textSize="14sp" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_hint_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_password"
                    android:layout_marginLeft="@dimen/x_25dp"
                    android:layout_marginRight="@dimen/x_25dp"
                    android:text="@string/str_edit_title"
                    android:textColor="@color/redE0"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="110dp"
                    android:layout_marginLeft="@dimen/x_15dp"
                    android:layout_marginTop="@dimen/x_15dp"
                    android:layout_marginRight="@dimen/x_15dp"
                    android:background="@drawable/login_edit_bg"
                    android:paddingLeft="@dimen/x_15dp"
                    android:paddingRight="@dimen/x_15dp">

                    <EditText

                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="14dp"
                        android:id="@+id/et_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/str_edit_less_than_500"
                        android:textColor="@color/text_color_dark"
                        android:textColorHint="@color/gy8A"
                        android:textSize="14sp" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_hint_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_password"
                    android:layout_marginLeft="@dimen/x_25dp"
                    android:layout_marginRight="@dimen/x_25dp"
                    android:text="@string/str_edit_summary"
                    android:textColor="@color/redE0"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x_15dp"
                    android:layout_marginTop="@dimen/x_15dp"
                    android:layout_marginRight="@dimen/x_15dp">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="8dp"
                        android:lineSpacingExtra="5dp"
                        android:text="@string/str_upload_pic_hint_two"
                        android:textColor="@color/gy8A"
                        android:textSize="12sp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_hint_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_password"
                    android:layout_marginLeft="@dimen/x_25dp"
                    android:layout_marginRight="@dimen/x_25dp"
                    android:text="@string/str_upload_complaint_info"
                    android:textColor="@color/redE0"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView

                    android:id="@+id/tv_commit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_edit_height"
                    android:layout_marginLeft="@dimen/x_25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/x_25dp"
                    android:background="@drawable/drawable_dibi"
                    android:gravity="center"
                    android:text="@string/comfirm_submit"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>


            <include
                layout="@layout/layout_oeder_info"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</LinearLayout>
