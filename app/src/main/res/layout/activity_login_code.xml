<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".login.view.LoginCodeActivity">
    <ImageView
        android:id="@+id/iv_lcBack"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar"
        android:src="@mipmap/arrow_back"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_15dp"
        android:text="@string/str_login_vvbtc"
        android:textColor="@color/text_color_dark"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tv_edit_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_25dp"
        android:layout_marginTop="37dp"
        android:text="@string/str_edit_two_validation"
        android:textColor="@color/text_color_dark"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_lcTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_25dp"
        android:layout_marginRight="@dimen/x_25dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/gy8A"
        android:textSize="12sp"/>
    <cn.suozhi.DiBi.login.widget.SeparatedEditText
        android:id="@+id/edit_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        app:blockSpacing="5dp"
        app:corner="3dp"
        app:borderColor="@color/redE0"
        app:separateType="@integer/type_solid"
        app:text_Color="@color/text_color_dark" />
    <TextView
        android:id="@+id/tv_lcCodeError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:textSize="12sp"
        android:textColor="@color/redE0"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_lcLostQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            android:text="@string/lostGoogleVerifyQ"
            android:textSize="14sp"
            android:textColor="@color/color_1888FE"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_lcSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:text="@string/str_get_msg_code"
            android:textSize="14sp"
            android:textColor="@drawable/sls_color_purple_gy_8a"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
