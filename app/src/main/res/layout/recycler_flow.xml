<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_flowItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="23:58:24"
        android:textSize="12sp"
        android:textColor="@color/gy52"
        android:textColorHint="@color/trans"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_flowItemStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginEnd="15dp"
        android:hint="@string/deliverPart"
        android:textSize="12sp"
        android:textColor="@color/gy96"
        android:textColorHint="@color/trans"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_flowItemTime"/>
    <TextView
        android:id="@+id/tv_flowItemMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:hint="+20556.89"
        android:textSize="12sp"
        android:textColor="@color/gy96"
        android:textColorHint="@color/trans"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintLeft_toRightOf="@id/tv_flowItemTime"
        app:layout_constraintRight_toLeftOf="@id/tv_flowItemStatus"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_flowItemTime"/>
</androidx.constraintlayout.widget.ConstraintLayout>