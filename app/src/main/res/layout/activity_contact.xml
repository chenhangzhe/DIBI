<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gyF9"
    tools:context=".home.view.ContactActivity">
    <include layout="@layout/toolbar_left"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/l_contact1"/>
        <TextView
            android:id="@+id/tv_contactWork"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/arrow_right_gray_big"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="@string/myWorkOrder"
            android:textSize="16sp"
            android:textColor="@color/bk2C"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/l_contact0"
            android:layout_width="0dp"
            android:layout_height="2px"
            android:background="@color/gy8A_t26"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_contactWork"/>
        <TextView
            android:id="@+id/tv_contactSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/arrow_right_gray_big"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="@string/submitWorkOrder"
            android:textSize="16sp"
            android:textColor="@color/bk2C"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/l_contact0"/>
        <View
            android:id="@+id/l_contact1"
            android:layout_width="0dp"
            android:layout_height="2px"
            android:background="@color/gy8A_t26"
            app:layout_constraintLeft_toLeftOf="@id/l_contact0"
            app:layout_constraintRight_toRightOf="@id/l_contact0"
            app:layout_constraintTop_toBottomOf="@id/tv_contactSubmit"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>