<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_logoutCon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bk1A"
    android:visibility="gone">
    <View
        android:id="@+id/v_logoutCon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_logoutConTips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/getMoreAfterLogin"
        android:textSize="15sp"
        android:textColor="@color/gy96"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_logoutCon"
        app:layout_constraintBottom_toTopOf="@+id/tv_logoutConGo"/>
    <TextView
        android:id="@+id/tv_logoutConGo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sp20_stroke_purple_77"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:gravity="center"
        android:text="@string/goLogin"
        android:textSize="15sp"
        android:textColor="@color/color_1888FE"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_logoutConTips"
        app:layout_constraintBottom_toBottomOf="@id/v_logoutCon"/>
</androidx.constraintlayout.widget.ConstraintLayout>