<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_vote_items_intro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vote_v2"
    android:padding="5dp"
    android:layout_marginStart="@dimen/x_15dp"
    android:layout_marginEnd="@dimen/x_15dp"
    android:layout_marginBottom="7dp">

    <LinearLayout
        android:id="@+id/ll_vote_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_vote_coin_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/img_fail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_vote_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="@dimen/x_15dp"
                app:layout_constraintStart_toEndOf="@+id/iv_vote_coin_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_helpItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_vote_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/y_15dp"
            android:layout_marginBottom="@dimen/y_15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_vote_items">

            <TextView
                android:id="@+id/tv_vote_button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/coin_intro"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/x_15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/color_1888FE"/>

            <TextView
                android:id="@+id/tv_vote_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/do_vote"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/x_15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/redE0"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>