<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp">
    <ImageView
        android:id="@+id/iv_thTriangle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:src="@mipmap/triangle_double_gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/tv_thRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/riseFall"
        android:textSize="12sp"
        android:textColor="@color/gyAB"
        app:layout_constraintRight_toLeftOf="@id/iv_thTriangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="@string/coinPair"
        android:textSize="12sp"
        android:textColor="@color/gyAB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_thRate" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0000.0000"
        android:text="@string/newestPrice"
        android:textSize="12sp"
        android:textColor="@color/gyAB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_thRate"/>
</androidx.constraintlayout.widget.ConstraintLayout>