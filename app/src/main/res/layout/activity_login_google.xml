<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".login.view.LoginGoogleActivity">
    <include layout="@layout/toolbar_left"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:text="@string/str_edit_two_validation"
        android:textSize="18sp"
        android:textColor="@color/bk2C"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="6dp"
        android:text="@string/str_edit_two_validation_hint"
        android:textSize="12sp"
        android:textColor="@color/gy8A"/>
    <cn.suozhi.DiBi.login.widget.SeparatedEditText
        android:id="@+id/et_lgCode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        app:blockSpacing="5dp"
        app:corner="3dp"
        app:borderColor="@color/redE0"
        app:separateType="@integer/type_solid"
        app:text_Color="@color/text_color_dark"/>
    <TextView
        android:id="@+id/tv_lgCodeError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:textSize="12sp"
        android:textColor="@color/redE0"/>
    <TextView
        android:id="@+id/tv_lgLostQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:text="@string/lostGoogleVerifyQ"
        android:textSize="14sp"
        android:textColor="@color/color_1888FE"/>
</LinearLayout>