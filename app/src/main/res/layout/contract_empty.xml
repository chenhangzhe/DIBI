<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_emptyCon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bk1A"
    android:visibility="gone">
    <View
        android:id="@+id/v_emptyCon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_emptyCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/empty_bk"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_emptyCon"
        app:layout_constraintBottom_toTopOf="@+id/tv_emptyConTips"/>
    <TextView
        android:id="@+id/tv_emptyConTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/emptyData"
        android:textSize="15sp"
        android:textColor="@color/gy96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_emptyCon"
        app:layout_constraintBottom_toBottomOf="@id/v_emptyCon"/>
</androidx.constraintlayout.widget.ConstraintLayout>