<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_tradeCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/trade_change"
        android:drawablePadding="12dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textSize="26sp"
        android:textColor="@color/bk2C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_ieoTransfer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@mipmap/transfer_coin"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintRight_toLeftOf="@+id/iv_tradeKline"
        app:layout_constraintTop_toTopOf="@id/tv_tradeCoin"
        app:layout_constraintBottom_toBottomOf="@id/tv_tradeCoin"/>

    <ImageView
        android:id="@+id/iv_tradeKline"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@mipmap/trade_kline"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_tradeCoin"
        app:layout_constraintBottom_toBottomOf="@id/tv_tradeCoin"/>

    <View
        android:id="@+id/v_fragment_trade_view"
        android:layout_width="0dp"
        android:layout_height="2px"
        android:background="@color/trans"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fl_trade"
        app:layout_constraintTop_toBottomOf="@+id/iv_tradeKline"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_tradeTab"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:tabMode="scrollable"
        app:tabPaddingStart="5dp"
        app:tabPaddingEnd="5dp"
        app:tabRippleColor="@color/trans"
        app:tabIndicatorHeight="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tradeCoin"/>

    <FrameLayout
        android:id="@+id/fl_trade"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tl_tradeTab"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>