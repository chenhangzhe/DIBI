<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".home.view.PasswordResetActivity">
    <include layout="@layout/toolbar_left"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/tv_psPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="@string/newLoginPassword"
            android:textSize="15sp"
            android:textColor="@color/bk2C"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:id="@+id/et_psPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/slf_sp3_stroke_purple_77_solid_gy_fd"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="8dp"
            android:padding="14dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:maxLength="21"
            android:hint="@string/passwordTips"
            android:digits="@string/passwordLimit"
            android:textSize="14sp"
            android:textColor="@color/bk2C"
            android:textColorHint="@color/gy8A"
            app:layout_constraintLeft_toLeftOf="@id/tv_psPassword"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_psPassword"/>
        <TextView
            android:id="@+id/et_psPasswordError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/redE0"
            app:layout_constraintLeft_toLeftOf="@id/et_psPassword"
            app:layout_constraintRight_toRightOf="@id/et_psPassword"
            app:layout_constraintTop_toBottomOf="@id/et_psPassword"/>

        <TextView
            android:id="@+id/tv_psAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirmPassword"
            android:textSize="15sp"
            android:textColor="@color/bk2C"
            app:layout_constraintLeft_toLeftOf="@id/tv_psPassword"
            app:layout_constraintTop_toBottomOf="@id/et_psPasswordError"/>
        <EditText
            android:id="@+id/et_psAgain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/slf_sp3_stroke_purple_77_solid_gy_fd"
            android:layout_marginTop="8dp"
            android:padding="14dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:imeOptions="actionGo"
            android:maxLength="21"
            android:hint="@string/inputConfirmPassword"
            android:digits="@string/passwordLimit"
            android:textSize="14sp"
            android:textColor="@color/bk2C"
            android:textColorHint="@color/gy8A"
            app:layout_constraintLeft_toLeftOf="@id/et_psPassword"
            app:layout_constraintRight_toRightOf="@id/et_psPassword"
            app:layout_constraintTop_toBottomOf="@id/tv_psAgain"/>
        <TextView
            android:id="@+id/et_psAgainError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/redE0"
            app:layout_constraintLeft_toLeftOf="@id/et_psAgain"
            app:layout_constraintRight_toRightOf="@id/et_psAgain"
            app:layout_constraintTop_toBottomOf="@id/et_psAgain"/>

        <TextView
            android:id="@+id/tv_psConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/slp_sp3_grad0_blue"
            android:layout_margin="25dp"
            android:padding="13dp"
            android:text="@string/confirm"
            android:textSize="17sp"
            android:textColor="@color/white"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_psAgainError"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>