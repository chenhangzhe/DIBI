<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_marginLeft="@dimen/x_15dp"
            android:layout_toLeftOf="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/search_coin_bg"
            android:gravity="center_vertical"
            android:paddingRight="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x_15dp"
                android:src="@mipmap/search" />

            <EditText
                android:singleLine="true"
                android:id="@+id/et_search_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:hint="@string/str_please_edit_key"
                android:imeOptions="actionSearch"
                android:textColor="@color/text_color_dark"
                android:textColorHint="@color/color_abb1cb"
                android:textSize="15sp" />


        </LinearLayout>

        <TextView
            android:layout_marginRight="@dimen/x_15dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_cancel"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="@string/cancel"
            android:textColor="@color/color_1888FE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_often_coin"
        android:layout_marginRight="@dimen/x_15dp"
        android:layout_marginTop="@dimen/x_10dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="@dimen/y_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/mainlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@drawable/list_item_divider"
            android:dividerHeight="1dip"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/main_tv01"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/gyF9"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x_15dp"
            android:textColor="@color/color_1888FE"
            android:textSize="16sp" />

        <cn.suozhi.DiBi.wallet.adapter.CoinSideBar
            android:id="@+id/myview"
            android:layout_width="28dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp" />
    </FrameLayout>

</LinearLayout>