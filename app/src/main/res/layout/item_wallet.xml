<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_walletItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x_15dp"
    android:paddingTop="12dp"
    android:paddingRight="@dimen/x_15dp">

    <ImageView
        android:id="@+id/iv_coin"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tv_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:textColor="@color/text_color_dark"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_coin" />

    <ImageView
        android:id="@+id/iv_item_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/problem"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/tv_coin"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toplayout"
        android:layout_width="@dimen/dp_size_120"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_coin"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_size_70"
        >
        <TextView
            android:id="@+id/tv_blunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="冲币"
            android:visibility="visible"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_mention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_blunt"
            app:layout_constraintRight_toLeftOf="@id/tv_zhang"
            app:layout_constraintTop_toTopOf="parent"
            android:text="提币"
            android:visibility="visible"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_zhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="账单"
            android:visibility="visible"
            android:textSize="12sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/lly_coin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_coin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_have"
                android:textColor="@color/gy8A"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeStepGranularity="1sp"
                android:textColor="@color/text_color_dark"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cny"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginTop="5dp"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="9sp"
                app:autoSizeMaxTextSize="11sp"
                app:autoSizeStepGranularity="1sp"
                android:textColor="@color/text_color_light_dark"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_useable"
                android:textColor="@color/gy8A"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatTextView

                android:id="@+id/tv_avalible"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeStepGranularity="1sp"
                android:textColor="@color/text_color_dark"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_frozen"
                android:textColor="@color/gy8A"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatTextView

                android:id="@+id/tv_frozen"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="2dp"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_dark"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/color_f5f5f8"
        app:layout_constraintTop_toBottomOf="@+id/lly_coin" />


</androidx.constraintlayout.widget.ConstraintLayout>