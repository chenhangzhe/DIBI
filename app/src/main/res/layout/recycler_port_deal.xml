<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_pdItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:hint="22:59:00"
        android:textSize="11sp"
        android:textColor="@color/gy96"
        android:textColorHint="@color/trans"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_pdItemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginEnd="15dp"
        android:hint="0000.0000"
        android:textSize="11sp"
        android:textColor="@color/gy96"
        android:textColorHint="@color/trans"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_pdItemTime"/>
    <TextView
        android:id="@+id/tv_pdItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0000.0000"
        android:textSize="11sp"
        android:textColor="@drawable/sls_color_green_3f_red_e0"
        android:textColorHint="@color/trans"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintLeft_toRightOf="@id/tv_pdItemTime"
        app:layout_constraintRight_toLeftOf="@id/tv_pdItemAmount"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_pdItemTime"/>
</androidx.constraintlayout.widget.ConstraintLayout>