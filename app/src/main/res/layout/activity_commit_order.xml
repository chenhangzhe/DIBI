<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_mineBack"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@mipmap/arrow_left_indigo" />

    <TextView
        android:id="@+id/tv_msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:text="@string/submitWorkOrder"
        android:textColor="@color/color_2d395c"
        android:textSize="28sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f8f9fd"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f8f9fd"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="335dp"
                android:layout_height="75dp"
                android:layout_marginTop="25dp"
                android:background="@mipmap/icon_shape_order_top">

                <TextView
                    android:id="@+id/tv_q_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="19dp"
                    android:text="@string/workOrderType"
                    android:textColor="@color/color_2d395c"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/img_type_arrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:padding="8dp"
                    android:src="@drawable/sele_arrow_down_up"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_commit_order_bottom"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/edt_commit_order_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_commit_order_edt"
                    android:gravity="center_vertical"
                    android:hint="@string/vvbtc_title_hint"
                    android:maxLength="20"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColorHint="@color/color_8f95aa"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_commit_order_content"
                    android:layout_width="match_parent"
                    android:layout_height="117dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_commit_order_edt"
                    android:gravity="top|left"
                    android:hint="@string/vvbtc_content_hint"
                    android:maxLength="500"
                    android:padding="15dp"
                    android:textColorHint="@color/color_8f95aa"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/item_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/vvbtc_commit_pic_hint"
                        android:textColor="@color/color_8f95aa"
                        android:textSize="12sp" />

                </LinearLayout>


                <!--<ImageView-->
                <!--android:id="@+id/img_sfz"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="15dp"-->
                <!--android:layout_marginTop="11dp"-->
                <!--android:visibility="gone" />-->


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/item_sfz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/shape_commit_order_edt"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <ImageView
                        android:id="@+id/img_sfz"
                        android:layout_width="177dp"
                        android:layout_height="93dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="11dp"
                        android:src="@mipmap/icon_img_sfz"
                        android:scaleType="fitXY"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="11dp"
                        android:background="@drawable/shape_sfz_bottom"
                        android:gravity="center"
                        android:text="@string/vvbtc_commit_sfz"
                        android:textColor="#ff7373f7"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/img_sfz"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                    <ImageView
                        android:id="@+id/iv_Delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/cross_corner_tr"
                        android:visibility="gone"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tv_c1Submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="31dp"
                    android:background="@drawable/slp_sp3_grad0_blue"
                    android:gravity="center"
                    android:padding="13dp"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>