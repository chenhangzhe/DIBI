<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_bmMarket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">
    <TextView
        android:id="@+id/tv_bmPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sp2_stroke_gy_8a_t80"
        android:padding="10dp"
        android:text="@string/marketPriceHint"
        android:textColor="@color/bk2C_t4D"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_bmPriceCny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/bk2C_t80"
        app:layout_constraintLeft_toLeftOf="@id/tv_bmPrice"
        app:layout_constraintTop_toBottomOf="@id/tv_bmPrice" />
    <TextView
        android:id="@+id/tv_bmAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sp2_solid_gy_f9_stroke_gy_8a_t80"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="@string/amount"
        android:textColor="@color/bk2C_t4D"
        app:layout_constraintLeft_toLeftOf="@id/tv_bmPrice"
        app:layout_constraintRight_toRightOf="@id/tv_bmPrice"
        app:layout_constraintTop_toBottomOf="@id/tv_bmPriceCny"/>
    <TextView
        android:id="@+id/tv_bmaCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:textSize="11sp"
        android:textColor="@color/bk2C_t80"
        app:layout_constraintLeft_toRightOf="@id/tv_bmaAvail"
        app:layout_constraintTop_toBottomOf="@id/tv_bmAmount" />
    <TextView
        android:id="@+id/tv_bmaAvail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="--"
        android:textSize="11sp"
        android:textColor="@color/bk2C_t80"
        app:layout_constraintLeft_toRightOf="@id/tv_avail_text"
        app:layout_constraintTop_toBottomOf="@id/tv_bmAmount" />
    <TextView
        android:id="@+id/tv_avail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/avail"
        android:textSize="11sp"
        android:textColor="@color/bk2C_t80"
        app:layout_constraintLeft_toLeftOf="@id/tv_bmAmount"
        app:layout_constraintTop_toBottomOf="@id/tv_bmAmount" />

    <cn.suozhi.DiBi.common.custom.TickSeekBar
        android:id="@+id/tsb_bm"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="26dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:progress="0"
        android:max="100"
        app:tickBackHeight="5dp"
        app:tickBackCorner="3dp"
        app:tickWidth="8dp"
        app:tickColorBack="@color/grayEA"
        app:tickColorProgress="@color/color_1888FE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_bmProgress"
        app:layout_constraintTop_toBottomOf="@id/tv_bmaAvail"/>
    <TextView
        android:id="@+id/tv_bmProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:hint="100%"
        android:text="0%"
        android:textSize="11sp"
        android:textColor="@color/color_1888FE"
        app:layout_constraintRight_toRightOf="@id/tv_bmPrice"
        app:layout_constraintTop_toTopOf="@id/tsb_bm"
        app:layout_constraintBottom_toBottomOf="@id/tsb_bm"/>
</androidx.constraintlayout.widget.ConstraintLayout>