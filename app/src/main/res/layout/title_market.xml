<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_tmCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/coinPair"
        android:textSize="12sp"
        android:textColor="@color/gyAB"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_tmPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/newestPrice"
        android:textSize="12sp"
        android:textColor="@color/gyAB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_tmCoin"/>
    <ImageView
        android:id="@+id/iv_tmPriceTri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/triangle_double_gray"
        app:layout_constraintLeft_toRightOf="@id/tv_tmPrice"
        app:layout_constraintRight_toRightOf="@id/tv_tmPrice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_tmRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:text="@string/rate24h"
        android:textSize="12sp"
        android:textColor="@color/gyAB"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_tmCoin"/>
    <ImageView
        android:id="@+id/iv_tmRateTri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/triangle_double_gray"
        app:layout_constraintLeft_toRightOf="@id/tv_tmRate"
        app:layout_constraintRight_toRightOf="@id/tv_tmRate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>