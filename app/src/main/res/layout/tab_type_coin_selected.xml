<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_tabTypePBName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:gravity="center"
        android:textColor="@drawable/sls_color_purple_bk_2c"
        android:background="@drawable/sls_color_coin_selected"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:id="@+id/v_tabTypePB0"
        android:layout_width="0dp"
        android:layout_height="0px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/v_tabTypePBIndicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="0.1"/>
    <View
        android:id="@+id/v_tabTypePBIndicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sls_bg_purple_trans"
        app:layout_constraintLeft_toRightOf="@id/v_tabTypePB0"
        app:layout_constraintRight_toLeftOf="@+id/v_tabTypePB1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="0.06"/>
    <View
        android:id="@+id/v_tabTypePB1"
        android:layout_width="0dp"
        android:layout_height="0px"
        app:layout_constraintLeft_toRightOf="@id/v_tabTypePBIndicator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="0.1"/>
</androidx.constraintlayout.widget.ConstraintLayout>