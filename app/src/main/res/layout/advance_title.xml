<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/white">


    <TextView
        android:gravity="center"
        android:id="@+id/tv_all"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_15dp"
        android:background="@drawable/slc_order_bg"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="@string/str_all"
        android:textColor="@color/color_1888FE"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:gravity="center"
        android:id="@+id/tv_buy"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:background="@drawable/slc_order_bg"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="@string/str_buy"
        android:textColor="@color/color_1888FE"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_all" />

    <TextView
        android:gravity="center"
        android:id="@+id/tv_sell"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_15dp"
        android:background="@drawable/slc_order_bg"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="@string/str_sell"
        android:textColor="@color/color_1888FE"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_buy" />

</androidx.constraintlayout.widget.ConstraintLayout>