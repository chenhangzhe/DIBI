<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_comItemCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:hint="USDT"
        android:textColor="@color/bk2C"
        android:textColorHint="@color/trans"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_comItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:hint="09-44"
        android:textColor="@color/gy8A"
        android:textColorHint="@color/trans"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_comItemCoin"/>
    <TextView
        android:id="@+id/tv_comItemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:hint="4564.7854"
        android:textColor="@color/bk2C"
        android:textColorHint="@color/trans"
        app:layout_constraintLeft_toRightOf="@id/tv_comItemCoin"
        app:layout_constraintRight_toLeftOf="@+id/tv_comItemCategory"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_comItemCoin"/>
    <TextView
        android:id="@+id/tv_comItemCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:hint="@string/comType_future"
        android:textColor="@color/bk2C"
        android:textColorHint="@color/trans"
        app:layout_constraintLeft_toRightOf="@id/tv_comItemAmount"
        app:layout_constraintRight_toLeftOf="@id/tv_comItemTime"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_comItemCoin"/>
    <View
        android:layout_width="0dp"
        android:layout_height="2px"
        android:background="@color/gy8A_t26"
        android:layout_marginTop="14dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_comItemCoin"
        app:layout_constraintRight_toRightOf="@id/tv_comItemTime"
        app:layout_constraintTop_toBottomOf="@id/tv_comItemCoin"/>
</androidx.constraintlayout.widget.ConstraintLayout>