<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_notifyItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_notifyItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/bk2C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_notifyItemArrow"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_notifyItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="13sp"
        android:textColor="@color/gy8A"
        app:layout_constraintLeft_toLeftOf="@id/tv_notifyItemTitle"
        app:layout_constraintTop_toBottomOf="@id/tv_notifyItemTitle"/>
    <ImageView
        android:id="@+id/iv_notifyItemArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow_right_gray_big"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_notifyItemTitle"
        app:layout_constraintBottom_toBottomOf="@id/tv_notifyItemTime"/>
    <View
        android:layout_width="0dp"
        android:layout_height="2px"
        android:background="@color/gy8A_t26"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_notifyItemTitle"
        app:layout_constraintRight_toRightOf="@id/iv_notifyItemArrow"
        app:layout_constraintTop_toBottomOf="@id/tv_notifyItemTime"/>
</androidx.constraintlayout.widget.ConstraintLayout>