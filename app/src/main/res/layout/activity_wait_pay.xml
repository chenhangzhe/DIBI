<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_dibi"
    tools:context="cn.suozhi.DiBi.c2c.view.WaitPayActivity">

    <LinearLayout
        android:paddingBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rly_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x_15dp"
                android:src="@mipmap/back_white" />

            <TextView
                android:id="@+id/tv_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x_15dp"
                android:text="@string/str_trade_kown"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pay_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x_15dp"
                android:layout_marginTop="8dp"
                android:text="@string/str_wait_pay"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_contract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/x_15dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:drawableTop="@mipmap/contract"
                android:drawablePadding="3dp"
                android:text="@string/str_contract_business"
                android:textColor="@color/color_99ffffff"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pay_status"
                android:layout_marginLeft="@dimen/x_15dp"
                android:layout_marginTop="8dp"
                android:text="@string/str_order_wait_pay"
                android:textColor="@color/color_99ffffff"
                android:textSize="15sp" />
        </RelativeLayout>


        <include layout="@layout/layout_wait_pay" />


        <cn.suozhi.DiBi.c2c.widget.TimerTextView
            android:id="@+id/tv_countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_wpTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:visibility="gone"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lly_btn"
            android:layout_marginTop="@dimen/y_25dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_marginRight="@dimen/x_15dp"
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sp_solid_purple_3dp"
                android:gravity="center"
                android:text="@string/str_cancel_order"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/drawable_dibi"
                android:gravity="center"
                android:text="@string/str_payed_money"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>


