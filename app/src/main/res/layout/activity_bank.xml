<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gyF9"
    android:orientation="vertical"
    tools:context="cn.suozhi.DiBi.home.view.BankActivity">

    <include layout="@layout/toolbar_left" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x_15dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="@dimen/x_15dp"
                android:background="@mipmap/qrcode_bg">

                <ImageView
                    android:id="@+id/iv_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/bind_bank" />

                <TextView
                    android:id="@+id/tv_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/iv_wechat"
                    android:text="@string/str_bank"
                    android:textColor="@color/text_color_dark"
                    android:textSize="17sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x_15dp"
                android:layout_marginRight="@dimen/x_15dp"
                android:background="@drawable/charge_coin_radius_8dp_bg"
                android:orientation="vertical"
                android:paddingBottom="33dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/x_15dp"
                    android:layout_marginTop="@dimen/x_15dp"
                    android:layout_marginRight="@dimen/x_15dp"
                    android:background="@drawable/login_edit_bg"
                    android:paddingLeft="@dimen/x_15dp">

                    <TextView
                        android:id="@+id/et_bankName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/name"
                        android:textColor="@color/text_color_dark"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/et_bankName"
                        android:paddingEnd="15dp"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="@string/inputName"
                        android:maxLength="40"
                        android:textColor="@color/text_color_dark"
                        android:textColorHint="@color/gy8A"
                        android:textSize="14sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_hint_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x_15dp"
                    android:layout_marginRight="@dimen/x_25dp"
                    android:text="@string/str_edit_pay_name"
                    android:textColor="@color/redE0"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/x_15dp"
                    android:layout_marginTop="@dimen/x_15dp"
                    android:layout_marginRight="@dimen/x_15dp"
                    android:background="@drawable/login_edit_bg"
                    android:paddingLeft="@dimen/x_15dp"
                    android:paddingRight="@dimen/x_15dp">

                    <TextView
                        android:id="@+id/tv_master"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_account_bank"
                        android:textColor="@color/text_color_dark"
                        android:textSize="15sp" />


                    <EditText
                        android:id="@+id/et_account_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_master"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="@string/str_edit_account_bank"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:textColor="@color/text_color_dark"
                        android:textColorHint="@color/gy8A"
                        android:textSize="14sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_hint_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x_15dp"
                    android:layout_marginRight="@dimen/x_25dp"
                    android:text="@string/str_edit_pay_bank"
                    android:textColor="@color/redE0"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/x_15dp"
                    android:layout_marginTop="@dimen/x_15dp"
                    android:layout_marginRight="@dimen/x_15dp"
                    android:background="@drawable/login_edit_bg"
                    android:paddingLeft="@dimen/x_15dp"
                    android:paddingRight="@dimen/x_15dp">

                    <TextView
                        android:id="@+id/tv_branck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_account_branch_bank"
                        android:textColor="@color/text_color_dark"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/et_account_branch_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_branck"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="@string/str_edit_account_branch_bank"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:textColor="@color/text_color_dark"
                        android:textColorHint="@color/gy8A"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/x_15dp"
                    android:layout_marginTop="@dimen/x_15dp"
                    android:layout_marginRight="@dimen/x_15dp"
                    android:background="@drawable/login_edit_bg"
                    android:paddingLeft="@dimen/x_15dp"
                    android:paddingRight="@dimen/x_15dp">
                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_bank_number"
                        android:textColor="@color/text_color_dark"
                        android:textSize="15sp" />
                    <EditText
                        android:id="@+id/et_bank_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_number"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="@string/str_edit_bank_number"
                        android:maxLength="40"
                        android:singleLine="true"
                        android:textColor="@color/text_color_dark"
                        android:textColorHint="@color/gy8A"
                        android:textSize="14sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_hint_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x_15dp"
                    android:layout_marginRight="@dimen/x_25dp"
                    android:text="@string/str_edit_pay_accountNumber"
                    android:textColor="@color/redE0"
                    android:textSize="12sp"
                    android:visibility="gone" />


                <TextView

                    android:id="@+id/tv_commit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_edit_height"
                    android:layout_marginLeft="@dimen/x_25dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginRight="@dimen/x_25dp"
                    android:background="@drawable/drawable_dibi"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>
