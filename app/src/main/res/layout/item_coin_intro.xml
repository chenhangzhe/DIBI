<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk1A">

        <ImageView
            android:id="@+id/iv_left_back"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/arrow_left_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_coin_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="@string/coinIntro"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_left_back" />

        <View
            android:id="@+id/v_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bk1A"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_coin_name" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_1">

            <LinearLayout
                android:id="@+id/ll_sv_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_1">

                <LinearLayout
                    android:id="@+id/ll_coinIntro1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_1">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="@string/coinIntro_date"
                        android:gravity="left"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_icoDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        android:gravity="right"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_coinIntro2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_coinIntro1">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="@string/coinIntro_quantity"
                        android:gravity="left"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_icoQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp"
                        android:textIsSelectable="true"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_coinIntro3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_coinIntro2">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="@string/coinIntro_circulate_quantity"
                        android:gravity="left"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_circulateQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp"
                        android:textIsSelectable="true"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_coinIntro4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_coinIntro3">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="@string/coinIntro_price"
                        android:gravity="left"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_icoPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp"
                        android:textIsSelectable="true"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_coinIntro5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_coinIntro4">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="@string/coinIntro_white_paper"
                        android:gravity="left"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_whitePaper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp"
                        android:textIsSelectable="true"
                        android:autoLink="all"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_coinIntro6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_coinIntro5">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="@string/coinIntro_website"
                        android:gravity="left"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp"
                        android:autoLink="all"
                        android:textIsSelectable="true"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_coinIntro7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_coinIntro6">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="@string/coinIntro_blockchain_explorer"
                        android:gravity="left"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_blockchainExplorer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/gyE9"
                        android:textSize="15dp"
                        android:autoLink="all"
                        android:textIsSelectable="true"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_coinIntro8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_coinIntro7">

                    <TextView
                        android:id="@+id/tv_coinIntro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:textIsSelectable="true"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>




