<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".home.view.BindPhoneActivity">
    <include layout="@layout/toolbar_left"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/tv_bpPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="@string/phoneNumber"
            android:textSize="15sp"
            android:textColor="@color/bk2C"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bpPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/sp3_solid_gy_fd"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@id/tv_bpPhone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bpPhone">
            <TextView
                android:id="@+id/tv_bpArea"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:drawableEnd="@mipmap/arrow_down_gray"
                android:paddingStart="16dp"
                android:paddingEnd="10dp"
                android:hint="+000"
                android:textSize="15sp"
                android:textColor="@color/bk2C"
                android:textColorHint="@color/trans"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <View
                android:id="@+id/l_bp0"
                android:layout_width="2px"
                android:layout_height="0dp"
                android:background="@color/gyAB_t4C"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintLeft_toRightOf="@id/tv_bpArea"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <EditText
                android:id="@+id/et_bpPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="14dp"
                android:inputType="phone"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:maxLength="20"
                android:hint="@string/inputPhoneNumber"
                android:textSize="14sp"
                android:textColor="@color/bk2C"
                android:textColorHint="@color/gy8A"
                app:layout_constraintLeft_toRightOf="@id/l_bp0"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/et_bpPhoneError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/redE0"
            app:layout_constraintLeft_toLeftOf="@id/cl_bpPhone"
            app:layout_constraintRight_toRightOf="@id/cl_bpPhone"
            app:layout_constraintTop_toBottomOf="@id/cl_bpPhone"/>

        <TextView
            android:id="@+id/tv_bpCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smsCode"
            android:textSize="15sp"
            android:textColor="@color/bk2C"
            app:layout_constraintLeft_toLeftOf="@id/tv_bpPhone"
            app:layout_constraintTop_toBottomOf="@id/et_bpPhoneError"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bpCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/sp3_solid_gy_fd"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@id/cl_bpPhone"
            app:layout_constraintRight_toRightOf="@id/cl_bpPhone"
            app:layout_constraintTop_toBottomOf="@id/tv_bpCode">
            <EditText
                android:id="@+id/et_bpCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="14dp"
                android:inputType="number"
                android:singleLine="true"
                android:imeOptions="actionGo"
                android:maxLength="6"
                android:hint="@string/inputSmsCode"
                android:textSize="14sp"
                android:textColor="@color/bk2C"
                android:textColorHint="@color/gy8A"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/l_bp1"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_bpSend"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/sendCode"
                android:textSize="15sp"
                android:textColor="@drawable/sls_color_purple_gy_8a"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <View
                android:id="@+id/l_bp1"
                android:layout_width="2px"
                android:layout_height="0dp"
                android:background="@color/gyAB_t4C"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintRight_toLeftOf="@id/tv_bpSend"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/et_bpCodeError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/redE0"
            app:layout_constraintLeft_toLeftOf="@id/cl_bpCode"
            app:layout_constraintRight_toRightOf="@id/cl_bpCode"
            app:layout_constraintTop_toBottomOf="@id/cl_bpCode"/>

        <TextView
            android:id="@+id/tv_bpBind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/slp_sp3_grad0_blue"
            android:layout_margin="25dp"
            android:padding="13dp"
            android:text="@string/enable"
            android:textSize="17sp"
            android:textColor="@color/white"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_bpCodeError"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>