<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="18dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rly_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="20dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/lly_success"
            android:id="@+id/tv_phone"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x_15dp"
            android:layout_marginTop="13dp"
            android:textColor="@color/text_color_dark"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/lly_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginRight="@dimen/x_15dp"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tv_suc_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gy8A"
                android:textSize="12sp" />

<!--            <View-->
<!--                android:layout_width="1px"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:layout_marginLeft="8dp"-->
<!--                android:layout_marginTop="2dp"-->
<!--                android:layout_marginRight="8dp"-->
<!--                android:layout_marginBottom="2dp"-->
<!--                android:background="@color/gy8A" />-->

            <TextView
                android:id="@+id/tv_use_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gy8A"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_15dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/gy8A"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rly_head" />
    <TextView
        android:id="@+id/tv_amount_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/gy8A"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nums" />
    <TextView
        android:id="@+id/tv_price_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_15dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="15dp"
        android:text="@string/str_c2c_price"
        android:textColor="@color/gy8A"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rly_head" />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_15dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/color_1888FE"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_note" />
    <LinearLayout
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/lly_payType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_15dp"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_amount_limit">
    </LinearLayout>
    <TextView
        android:id="@+id/tv_buy"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/x_15dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/drawable_dibi"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_amount_limit" />
</androidx.constraintlayout.widget.ConstraintLayout>