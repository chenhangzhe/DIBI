<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".home.view.BindGoogleActivity">
    <include layout="@layout/toolbar_left"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <TextView
                    android:id="@+id/tv_bg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold|italic"
                    android:text="1"
                    android:textSize="18sp"
                    android:textColor="@color/gyAB"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/tv_bg1Download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sp2_purple_solid_77_t1a_stroke_77"
                    android:layout_marginEnd="25dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/color_1888FE"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_bg1"
                    app:layout_constraintBottom_toTopOf="@id/tv_bg1"/>
                <TextView
                    android:id="@+id/tv_bg1Hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/download"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/trans"
                    app:layout_constraintTop_toBottomOf="@id/tv_bg1"
                    app:layout_constraintBottom_toTopOf="@id/tv_bg1"/>
                <TextView
                    android:id="@+id/tv_bg1Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/bindGoogleTitle1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/bk2C"
                    app:layout_constraintLeft_toRightOf="@id/tv_bg1"
                    app:layout_constraintRight_toLeftOf="@id/tv_bg1Download"
                    app:layout_constraintTop_toTopOf="@id/tv_bg1Hold"/>
                <TextView
                    android:id="@+id/tv_bg1Info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingMultiplier="1.1"
                    android:text="@string/bindGoogleInfo1"
                    android:textSize="12sp"
                    android:textColor="@color/bk2C"
                    app:layout_constraintLeft_toLeftOf="@id/tv_bg1Title"
                    app:layout_constraintRight_toRightOf="@id/tv_bg1Download"
                    app:layout_constraintTop_toBottomOf="@id/tv_bg1Title"/>
                <View
                    android:id="@+id/l_bg1"
                    android:layout_width="0dp"
                    android:layout_height="2px"
                    android:background="@color/gy8A_t26"
                    android:layout_marginTop="25dp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_bg1"
                    app:layout_constraintRight_toRightOf="@id/tv_bg1Download"
                    app:layout_constraintTop_toBottomOf="@id/tv_bg1Info"/>

                <TextView
                    android:id="@+id/tv_bg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textStyle="bold|italic"
                    android:text="2"
                    android:textSize="18sp"
                    android:textColor="@color/gyAB"
                    app:layout_constraintLeft_toLeftOf="@id/tv_bg1"
                    app:layout_constraintTop_toBottomOf="@id/l_bg1"/>
                <TextView
                    android:id="@+id/tv_bg2Hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/download"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/trans"
                    app:layout_constraintTop_toBottomOf="@id/tv_bg2"
                    app:layout_constraintBottom_toTopOf="@id/tv_bg2"/>
                <TextView
                    android:id="@+id/tv_bg2Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/bindGoogleTitle2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/bk2C"
                    app:layout_constraintLeft_toLeftOf="@id/tv_bg1Info"
                    app:layout_constraintRight_toRightOf="@id/tv_bg1Info"
                    app:layout_constraintTop_toTopOf="@id/tv_bg2Hold"/>
                <TextView
                    android:id="@+id/tv_bg2Info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingMultiplier="1.1"
                    android:text="@string/bindGoogleInfo2"
                    android:textSize="12sp"
                    android:textColor="@color/bk2C"
                    app:layout_constraintLeft_toLeftOf="@id/tv_bg1Info"
                    app:layout_constraintRight_toRightOf="@id/tv_bg1Info"
                    app:layout_constraintTop_toBottomOf="@id/tv_bg2Title"/>
                <TextView
                    android:id="@+id/tv_bgCipher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sp3_solid_gy_fd"
                    android:layout_marginTop="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/gy8A"
                    app:layout_constraintLeft_toLeftOf="@id/tv_bg1Info"
                    app:layout_constraintRight_toRightOf="@id/tv_bg1Info"
                    app:layout_constraintTop_toBottomOf="@id/tv_bg2Info"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:paddingEnd="16dp"
                    android:text="@string/copy"
                    android:textColor="@color/color_1888FE"
                    app:layout_constraintRight_toRightOf="@id/tv_bgCipher"
                    app:layout_constraintTop_toTopOf="@id/tv_bgCipher"
                    app:layout_constraintBottom_toBottomOf="@id/tv_bgCipher"/>
                <View
                    android:id="@+id/l_bg2"
                    android:layout_width="0dp"
                    android:layout_height="2px"
                    android:background="@color/gy8A_t26"
                    android:layout_marginTop="25dp"
                    app:layout_constraintLeft_toLeftOf="@id/l_bg1"
                    app:layout_constraintRight_toRightOf="@id/l_bg1"
                    app:layout_constraintTop_toBottomOf="@id/tv_bgCipher"/>

                <TextView
                    android:id="@+id/tv_bg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textStyle="bold|italic"
                    android:text="3"
                    android:textSize="18sp"
                    android:textColor="@color/gyAB"
                    app:layout_constraintLeft_toLeftOf="@id/tv_bg1"
                    app:layout_constraintTop_toBottomOf="@id/l_bg2"/>
                <TextView
                    android:id="@+id/tv_bg3Hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/download"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/trans"
                    app:layout_constraintTop_toBottomOf="@id/tv_bg3"
                    app:layout_constraintBottom_toTopOf="@id/tv_bg3"/>
                <TextView
                    android:id="@+id/tv_bg3Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/bindGoogleTitle3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/bk2C"
                    app:layout_constraintLeft_toLeftOf="@id/tv_bg1Info"
                    app:layout_constraintRight_toRightOf="@id/tv_bg1Info"
                    app:layout_constraintTop_toTopOf="@id/tv_bg3Hold"/>
                <EditText
                    android:id="@+id/et_bgCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slf_sp3_stroke_purple_77_solid_gy_fd"
                    android:layout_marginTop="12dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:imeOptions="actionGo"
                    android:maxLength="6"
                    android:hint="@string/inputGoogleCode"
                    android:textSize="14sp"
                    android:textColor="@color/bk2C"
                    android:textColorHint="@color/gy8A"
                    app:layout_constraintLeft_toLeftOf="@id/tv_bg1Info"
                    app:layout_constraintRight_toRightOf="@id/tv_bg1Info"
                    app:layout_constraintTop_toBottomOf="@id/tv_bg3Title"/>
                <TextView
                    android:id="@+id/et_bgCodeError"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/redE0"
                    app:layout_constraintLeft_toLeftOf="@id/et_bgCode"
                    app:layout_constraintRight_toRightOf="@id/et_bgCode"
                    app:layout_constraintTop_toBottomOf="@id/et_bgCode"/>
                <TextView
                    android:id="@+id/tv_bgBind"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/slp_sp3_grad0_blue"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:padding="13dp"
                    android:text="@string/enable"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_bgCodeError"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>