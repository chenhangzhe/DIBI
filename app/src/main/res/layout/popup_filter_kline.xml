<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/v_popFk"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sls_bg_black_t80_trans"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/spr15_2t_solid_bk_1a"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintHeight_percent="0.64"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/bk14F"
                android:layout_alignBottom="@+id/tl_popFkType"/>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tl_popFkType"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                app:tabMode="scrollable"
                app:tabPaddingStart="8dp"
                app:tabPaddingEnd="8dp"
                app:tabRippleColor="@color/trans"
                app:tabIndicatorHeight="0dp"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/et_popFkSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sp3_solid_bk_25"
            android:drawableStart="@mipmap/search_blue_indigo"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="12dp"
            android:drawablePadding="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:maxLength="20"
            android:hint="@string/searchByKey"
            android:textSize="15sp"
            android:textColor="@color/gy96"
            android:textColorHint="@color/gy5A"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_popFkSymbol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>