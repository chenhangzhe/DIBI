<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="cn.suozhi.DiBi.home.view.CEDActivity">

    <!-- 顶部 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/toolbar_centerBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/arrow_left_indigo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/toolbar_centerTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/bk2C"
            android:text="@string/consensus_details"
            android:textSize="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- 顶部分割线 -->
    <View
        android:id="@+id/v_aced_v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gyE9"/>

            <ScrollView
                android:id="@+id/sv_aced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <!-- 币Logo + 币名 + 邀请好友 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_aced_coin_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tv_aced_coin_name"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_aced_coin_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:layout_marginStart="20dp"
                            app:layout_constraintLeft_toRightOf="@+id/iv_aced_coin_image"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/tv_aced_invite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="24dp"
                            android:paddingLeft="24dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:background="@drawable/drawable_recycler_consensus_exchange_btn"
                            android:textColor="@color/white"
                            android:text="@string/inviteFriend"
                            android:textSize="15dp"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 申请进度 + 进度条 + 数字比例 -->
                    <TextView
                        android:id="@+id/tv_aced_apply_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/apply_for_progress"
                        android:textSize="20dp"/>

                    <ProgressBar
                        android:id="@+id/progress_aced"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="1"
                        android:layout_marginTop="8dp"
                        android:minHeight="20dp"
                        android:progressDrawable="@drawable/drawable_progress_yellow"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_aced_percent_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"/>

                            <TextView
                                android:id="@+id/tv_aced_percent_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <!-- 单价 + 总量 + 参与人数 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">
                        <!-- 左 -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1">

                            <TextView
                                android:id="@+id/tv_lc_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:gravity="center"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/tv_lc_4"/>

                            <TextView
                                android:id="@+id/tv_lc_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:gravity="center"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_lc_1"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <!-- 中 -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1">

                            <TextView
                                android:id="@+id/tv_lc_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:gravity="center"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/tv_lc_5"/>

                            <TextView
                                android:id="@+id/tv_lc_5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:gravity="center"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_lc_2"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <!-- 右 -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1">

                            <TextView
                                android:id="@+id/tv_lc_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="12dp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/tv_lc_6"/>

                            <TextView
                                android:id="@+id/tv_lc_6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/number_of_participants"
                                android:gravity="center"
                                android:textSize="12dp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_lc_3"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <!-- 申购币种 + 申购数量 + 可用 + 最小申购量 + 个人申购总量 + 剩余可申购量 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_apply_number_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/number_of_applications"
                            android:textSize="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/tv_apply_number_coin_base"/>

                        <TextView
                            android:id="@+id/tv_apply_number_coin_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:textSize="16dp"
                            android:textFontWeight="600"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/tv_apply_number_base"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/drawable_apply_coin_details_input">

                        <EditText
                            android:id="@+id/et_aced_etAmout_base"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:inputType="numberDecimal"
                            android:maxLength="20"
                            android:paddingLeft="8dp"
                            android:hint="@string/number_of_applications_hint"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:focusable="true"
                            android:focusableInTouchMode="true"/>

                    </RelativeLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_apply_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apply_amount"
                            android:textSize="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/tv_apply_number_coin"/>

                        <TextView
                            android:id="@+id/tv_apply_number_coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:textSize="16dp"
                            android:textFontWeight="600"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/tv_apply_number"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/drawable_apply_coin_details_input">

                        <EditText
                            android:id="@+id/et_aced_etAmout"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:inputType="numberDecimal"
                            android:maxLength="20"
                            android:paddingLeft="8dp"
                            android:hint="@string/amout_of_applications_hint"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:focusable="true"
                            android:focusableInTouchMode="true"/>

                    </RelativeLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_aced_available"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_aced_min_apply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="12dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_aced_available"/>

                        <TextView
                            android:id="@+id/tv_aced_personal_can"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="12dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_aced_min_apply"/>

                        <TextView
                            android:id="@+id/tv_aced_surplus_can"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="12dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_aced_personal_can"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 按钮 根据不同状态加载不同颜色 -->
                    <TextView
                        android:id="@+id/tv_btn_aced_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/drawable_apply_coin_btn"/>

                    <TextView
                        android:id="@+id/tv_countdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <!-- 底部Tab -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!-- 项目简介 -->
                        <LinearLayout
                            android:id="@+id/lly_ieo_intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tv_ieo_intro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ieo_intro"
                                android:textColor="@color/text_color_dark"
                                android:textSize="16sp" />

                            <View
                                android:id="@+id/v_ii"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/drawable_dibi"
                                android:visibility="gone" />

                        </LinearLayout>
                        <!-- 活动规则 -->
                        <LinearLayout
                            android:id="@+id/lly_charge_coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toRightOf="@+id/lly_ieo_intro"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tv_activity_rules"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rules"
                                android:textColor="@color/text_color_dark"
                                android:textSize="16sp" />

                            <View
                                android:id="@+id/v_ar"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/drawable_dibi"
                                android:visibility="gone" />

                        </LinearLayout>

                        <!-- 风险说明 -->
                        <LinearLayout
                            android:id="@+id/lly_danger_intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toRightOf="@+id/lly_charge_coin"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tv_danger_intro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ieo_danger_intro"
                                android:textColor="@color/text_color_dark"
                                android:textSize="16sp" />

                            <View
                                android:id="@+id/v_id"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/drawable_dibi"
                                android:visibility="gone" />

                        </LinearLayout>

                        <!-- 邀请记录 -->
                        <LinearLayout
                            android:id="@+id/lly_get_coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toRightOf="@+id/lly_danger_intro"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tv_invite_record"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/invite_record"
                                android:textColor="@color/text_color_dark"
                                android:textSize="16sp" />

                            <View
                                android:id="@+id/v_ir"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/drawable_dibi"
                                android:visibility="gone" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 两个列表 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!-- 项目简介 -->
                        <TextView
                            android:id="@+id/tv_ieo_intro_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"/>

                        <!-- 活动 -->
                        <TextView
                            android:id="@+id/tv_activity_rules_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <!-- 风险 -->
                        <TextView
                            android:id="@+id/tv_ieo_danger_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <!-- 邀请记录的列表 -->
                        <LinearLayout
                            android:id="@+id/ll_invite_records"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_ll_invite1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/iir1"
                                android:layout_weight="2"/>

                            <TextView
                                android:id="@+id/tv_ll_invite2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/iir2"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tv_ll_invite3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/iir3"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rv_item"
                            android:visibility="gone"
                            android:layout_below="@+id/ll_invite_records"/>

                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>

</LinearLayout>