<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rly_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x_15dp"
            android:src="@mipmap/arrow_back" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x_15dp"
        android:layout_marginTop="8dp"
        android:text="@string/str_add_address"
        android:textColor="@color/text_color_dark"
        android:textSize="28sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/login_edit_bg">

        <TextView
            android:id="@+id/tv_title_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x_10dp"
            android:text="@string/str_coin_type"
            android:textColor="@color/text_color_dark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x_10dp"
            android:layout_marginRight="@dimen/x_15dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_dark"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/y_10dp"
        android:background="@drawable/login_edit_bg">

        <TextView
            android:id="@+id/tv_title_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x_10dp"
            android:text="@string/str_note"
            android:textColor="@color/text_color_dark"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_note_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x_10dp"
            android:layout_marginRight="@dimen/x_10dp"
            android:layout_toLeftOf="@+id/iv_scan"
            android:layout_toRightOf="@+id/tv_title_address"
            android:background="@null"
            android:gravity="right"
            android:maxLength="20"
            android:inputType="text"
            android:hint="@string/str_add_address_hint"

            android:singleLine="true"
            android:textColorHint="@color/gy8A"
            android:textSize="12sp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_hint_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_marginLeft="@dimen/x_25dp"
        android:layout_marginRight="@dimen/x_25dp"
        android:text="@string/str_edit_note_name"
        android:textColor="@color/redE0"
        android:textSize="12sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/y_10dp"
        android:background="@drawable/login_edit_bg">

        <TextView
            android:id="@+id/tv_title_get_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x_10dp"
            android:text="@string/str_get_coin_address"
            android:textColor="@color/text_color_dark"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_coin_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x_10dp"
            android:layout_marginRight="@dimen/x_10dp"
            android:layout_toLeftOf="@+id/iv_scan"
            android:layout_toRightOf="@+id/tv_title_get_coin"
            android:background="@null"
            android:gravity="right"
            android:hint="@string/str_edit_get_address"
            android:singleLine="true"
            android:textColorHint="@color/gy8A"
            android:textSize="12sp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_hint_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_marginLeft="@dimen/x_25dp"
        android:layout_marginRight="@dimen/x_25dp"
        android:text="@string/str_edit_address"
        android:textColor="@color/redE0"
        android:textSize="12sp"
        android:visibility="gone" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rly_special_coin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/y_10dp"
        android:background="@drawable/login_edit_bg">

        <TextView
            android:id="@+id/tv_title_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x_10dp"
            android:text="@string/str_memo"
            android:textColor="@color/text_color_dark"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_memo_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x_10dp"
            android:layout_marginRight="@dimen/x_10dp"
            android:layout_toLeftOf="@+id/iv_scan"
            android:layout_toRightOf="@+id/tv_title_memo"
            android:background="@null"
            android:gravity="right"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColorHint="@color/gy8A"
            android:textSize="14sp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_hint_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_marginLeft="@dimen/x_25dp"
        android:layout_marginRight="@dimen/x_25dp"
        android:text="@string/str_edit_address"
        android:textColor="@color/redE0"
        android:textSize="12sp"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_height"
        android:layout_below="@+id/tv_forget_psw"
        android:layout_marginLeft="@dimen/x_25dp"
        android:layout_marginRight="@dimen/x_25dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/drawable_dibi"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="17sp" />


</LinearLayout>

