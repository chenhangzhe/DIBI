<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_vote_items_rank"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginBottom="6dp">

    <TextView
        android:id="@+id/tv_vote_coin_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"
        android:layout_weight="2"/>

    <ProgressBar
        android:id="@+id/progress_vote_item_pro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:max="100"
        android:progress="1"
        android:minHeight="18dp"
        android:progressDrawable="@drawable/drawable_progress_yellow"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginStart="@dimen/x_15dp"
        android:layout_weight="7"/>

</LinearLayout>