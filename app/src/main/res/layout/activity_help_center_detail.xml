<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar">
        <ImageView
            android:id="@+id/iv_mineBack"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/arrow_left_indigo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/helpCenter"
            android:textColor="#ff2d395c"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_mineBack"
            app:layout_constraintBottom_toBottomOf="@id/iv_mineBack"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_ndTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/bk2C"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/gy8A"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/tv_ndTitle"
            app:layout_constraintTop_toBottomOf="@id/tv_ndTitle" />

        <TextView
            android:id="@+id/tv_ndView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/gy8A"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_ndTime"
            app:layout_constraintLeft_toRightOf="@id/tv_ndTime" />

        <View
            android:layout_width="0dp"
            android:layout_height="2px"
            android:layout_marginTop="10dp"
            android:background="@color/gy8A_t26"
            app:layout_constraintLeft_toLeftOf="@id/tv_ndTitle"
            app:layout_constraintRight_toRightOf="@id/tv_ndTitle"
            app:layout_constraintTop_toBottomOf="@id/tv_ndTime" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srl_nd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1">

        <cn.suozhi.DiBi.common.custom.LollipopWebView
            android:id="@+id/wv_nd"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/vvbtc_is_help"
            android:textColor="#ff2d395c"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_yes"
                android:layout_width="83dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sele_yes"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/duigou" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/vvbtc_yes"
                    android:textColor="#ff33385e"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_no"
                android:layout_width="83dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/sele_no"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/guanbi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/NO"
                    android:textColor="#ffffffff"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!--最后-->
        <TextView
            android:id="@+id/tv_help_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="20dp"
            android:text="@string/vvbtc_help_num"
            android:textColor="#ff8f95aa"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>