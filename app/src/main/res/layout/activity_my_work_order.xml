<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_mineBack"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/arrow_left_indigo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/icon_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:text="@string/myWorkOrder"
        android:textColor="@color/color_2d395c"
        android:textSize="28sp" />


    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/smarttablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:stl_defaultTabTextMinWidth="95dp"
        app:stl_dividerColor="@color/white"
        app:stl_indicatorColor="@color/color_7373f7"
        app:stl_indicatorWidth="50dp"
        app:stl_customTabTextLayoutId="@layout/custom_tab"
        app:stl_customTabTextViewId="@id/custom_text"
        app:stl_indicatorCornerRadius="1dp"
        app:stl_indicatorThickness="3dp"
        app:stl_underlineColor="@color/white"
        app:stl_underlineThickness="0.5dp" />


    <cn.suozhi.DiBi.home.view.ExtendedViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>