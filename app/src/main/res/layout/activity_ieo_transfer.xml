<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_dibi"
    tools:context="cn.suozhi.DiBi.wallet.view.GetCoinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rly_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x_15dp"
                android:src="@mipmap/back_white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x_15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:textSize="28sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x_15dp"
            android:layout_marginRight="@dimen/x_15dp"
            android:paddingTop="@dimen/y_15dp"
            android:paddingBottom="@dimen/y_15dp"
            android:background="@mipmap/qrcode_bg">

            <TextView
                android:id="@+id/tv_t_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginStart="@dimen/x_15dp"
                android:layout_marginEnd="@dimen/x_15dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_t_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginStart="@dimen/x_15dp"
                android:layout_marginEnd="@dimen/x_15dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x_15dp"
            android:layout_marginRight="@dimen/x_15dp"
            android:paddingBottom="@dimen/y_15dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_ieo_transfer_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/ieo_transfer_selected"
                android:textColor="@color/text_color_dark" />

            <Spinner
                android:id="@+id/sp_choose_coin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:spinnerMode="dropdown"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="@dimen/x_15dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x_15dp"
            android:layout_marginRight="@dimen/x_15dp"
            android:background="@drawable/charge_coin_radius_8dp_bg"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/x_10dp"
                android:layout_marginRight="@dimen/x_10dp"
                android:background="@drawable/login_edit_bg"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x_10dp"
                    android:text="@string/transfer_number"
                    android:textColor="@color/text_color_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_amount"
                    android:inputType="numberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x_10dp"
                    android:layout_marginRight="@dimen/x_10dp"
                    android:layout_toStartOf="@+id/tv_get_coin_name"
                    android:layout_toEndOf="@+id/tv_nums"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="@string/enter_transfer_number"
                    android:textColorHint="@color/gy8A"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_get_coin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x_10dp"
                    android:textColor="@color/text_color_dark"
                    android:textSize="14sp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y_10dp">

                <TextView
                    android:id="@+id/tv_avalible_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/gy8A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:text="@string/str_all"
                    android:textColor="@color/color_1888FE"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_frozen_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/gy8A"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/y_25dp"
            android:background="@drawable/login_button_bg"
            android:gravity="center"
            android:text="@string/confirm_two"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="@string/dibi_launch_tip"/>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>


