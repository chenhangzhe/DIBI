<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_friendFoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="20dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_friendCode"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/sp5_stroke_purple_77"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/inviteCodeColon"
            android:textSize="13sp"
            android:textColor="@color/color_1888FE"/>
        <TextView
            android:id="@+id/tv_friendPoster"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/sp5_solid_purple_77"
            android:layout_marginStart="15dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/invitePoster"
            android:textSize="13sp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_commissionFoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="20dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/sp5_solid_gy_fc_stroke_gy_e9"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comTodayUSD"
                android:textSize="11sp"
                android:textColor="@color/gy8A"/>
            <TextView
                android:id="@+id/tv_comFootToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/color_1888FE"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/sp5_solid_gy_fc_stroke_gy_e9"
            android:layout_marginStart="10dp"
            android:padding="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comTotalUSD"
                android:textSize="11sp"
                android:textColor="@color/gy8A"/>
            <TextView
                android:id="@+id/tv_comFootTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/color_1888FE"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>