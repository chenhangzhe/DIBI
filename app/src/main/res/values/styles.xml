<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 全屏主题 Logo页使用 -->
    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!--处理启动闪白屏-->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/color_212147</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="GameTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="KlineTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bk1A</item>
        <item name="colorPrimaryDark">@color/bk1A</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 左右能填满的Toolbar样式 -->
    <style name="FillToolbar" parent="Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="TabText16" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TabText14" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TabText12" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabText15" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Dialog从小变大动画 -->
    <style name="animScaleCenter" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/scale_in_center</item>
        <item name="android:windowExitAnimation">@anim/scale_out_center</item>
    </style>
    <!-- Dialog从底部弹出 -->
    <style name="animTranslateBottom" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/translate_out_bottom</item>
    </style>

    <!-- H5页面进度条样式 -->
    <style name="ProgressBarH5" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">4dp</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@color/colorAccent</item>
    </style>
    <!-- 下载对话框样式 -->
    <style name="ProgressBarDownload" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">20dp</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/layer_progress_purple</item>
    </style>

    <!--登录页输入框样式-->
    <style name="Login_edit_style">
        <item name="android:background">@drawable/login_edit_bg</item>
        <item name="android:paddingLeft">@dimen/x_15dp</item>
        <item name="android:paddingRight">@dimen/x_15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textColorHint">@color/gy8A</item>
    </style>

    <!-- 解决启动页白屏的问题 -->
    <style name="LauncherTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/text_color_dark</item>
    </style>
    <style name="Linkage_Style">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/linkage_width</item>
        <item name="android:layout_height">@dimen/linkage_width</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
